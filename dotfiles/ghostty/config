# Workflow
window-inherit-working-directory = true

# Theme
theme = tokyonight_night
font-family = IosevkaNerdFontMono

# Splits
keybind = ctrl+space>v=new_split:right
keybind = ctrl+space>s=new_split:down
keybind = ctrl+space>z=toggle_split_zoom

keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+space>=equalize_splits


# Tabs
keybind = ctrl+space>c=new_tab
keybind = ctrl+space>q=toggle_tab_overview

keybind = ctrl+space>1=goto_tab:1
keybind = ctrl+space>2=goto_tab:2
keybind = ctrl+space>3=goto_tab:3
keybind = ctrl+space>4=goto_tab:4
keybind = ctrl+space>5=goto_tab:5
keybind = ctrl+space>6=goto_tab:6
keybind = ctrl+space>7=goto_tab:7
keybind = ctrl+space>8=goto_tab:8
keybind = ctrl+space>9=goto_tab:9
keybind = ctrl+space>0=goto_tab:10

# Terminal Window
window-decoration = auto
window-padding-x = 10
window-padding-y = 10
keybind = f11=toggle_fullscreen

